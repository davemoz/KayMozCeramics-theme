#colophon
	margin 0
	padding 0 0 3em
	width 100%
	z-index 99
	background-color #fff
	.instagram-feed
		margin-bottom 7em
		a
			box-shadow none
	.payment-methods
		display flex
		justify-content center
		flex-wrap wrap
		margin 0 0 3em
		+widerThan($mobileLG)
			flex-wrap nowrap
		.pf
			font-size 34px
			line-height 1.3
			color #9c9c9c
			margin-right 10px
			&:last-child
				margin-right 0
	.site-info
		font-size 13px
		margin 2em 0
		display flex
		justify-content center
		align-items center
		flex-direction column
		text-align center
		+widerThan($mobileLG)
			flex-direction row
		& > span
			margin-bottom 15px
			+widerThan($mobileLG)
				margin-bottom 0
			& > a
				&:hover
					text-decoration underline
		.sep
			display none
			margin 0 10px
			opacity 0.5
			+widerThan($mobileLG)
				display block
	.privacy
		font-size 13px
		margin 2em 0
		display flex
		justify-content center
		align-items center
		flex-direction row
		flex-wrap wrap
		text-align center
		& > span
			margin-bottom 5px
			+widerThan($mobileLG)
				margin-bottom 0
			& > a
				&:hover
					text-decoration underline
		.sep
			display block
			margin 0 10px
			opacity 0.5