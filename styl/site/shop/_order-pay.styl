.woocommerce-order-pay
	.shop_table
		thead
			background #f5f5f5
			th
				padding 1em 0
		tbody
			.order_item
				td
					display table-cell
					padding 1em
				&:nth-child(2n)
					td
						background-color #f5f5f5
		tfoot
			tr
				th
					text-align right
					padding 0 2em 0
				.product-total
					text-align center
					padding .45em 0
		.product-total
			width 26%
			+widerThan($tabletSM)
				width 15%
		.product-quantity
			text-align center
		.product-subtotal
			text-align center
	#payment
		width 100%
		float none
		+widerThan($tabletSM)
			width 50%
			float right
		.form-row
			.woocommerce-terms-and-conditions-wrapper
				padding 0 1em
				.woocommerce-privacy-policy-text
					opacity .5