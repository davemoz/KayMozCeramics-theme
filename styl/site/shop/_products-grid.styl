/* WooCommerce pagination */
.woocommerce-pagination
	margin-top 3em
	& > .page-numbers
		list-style none
		list-style-type none
		margin 0
		padding 0
		display flex
		justify-content center
		& > li
			margin-right 10px
			&:last-child
				margin-right 0
			& > .page-numbers
				padding 5px
				border-bottom none
				box-shadow none
				&[aria-current="page"]
					color #fff
					background-color $color__accent-second
					border-radius 2px