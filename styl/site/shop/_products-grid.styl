/*--------------------------------------------------------------
 ## Products Grid / Main Shop Page
----------------------------------------------------------------*/
.woocommerce.shop
	#secondary
		display none
.products
	margin 0
	padding 0
	list-style none
	list-style-type none
	display flex
	flex-wrap wrap
	justify-content space-between

	&.columns-3
		.product
			width 30%
	&.columns-4
		.product
			width 22%
	.product-category
		& > a
			border none
			box-shadow none
			.woocommerce-loop-category__title
				text-align center
				.count
					display none
	.product
		padding-bottom 5em
		.woocommerce-loop-product__link
			display block
			position relative
			border-bottom 0
			border-radius 2px
			background-color transparent
			box-shadow none
			.attachment-woocommerce_thumbnail
				border-radius 2px
			.product-title-and-price
				text-align center
				.woocommerce-loop-product__title
					font-size 12px
					letter-spacing 1px
					+widerThan($mobileLG)
						font-size 18px
						letter-spacing 4px
				.price
					display flex
					flex-direction row-reverse
					justify-content center
					align-items center
					.amount
						color $color__accent
					.misfit-price + .amount
						color lighten($color__accent, 10)
						text-decoration line-through
					.misfit-price
						color $color__accent-dark
						margin-left 15px
			&:hover
				.woocommerce-loop-product__title
					color #000
				.price
					.amount
						color $color__accent-dark
					.misfit-price + .amount
						color $color__accent
					.misfit-price
						color $color__accent-darker
		&.outofstock
			.woocommerce-loop-product__link
				&::before
					content 'Sold Out'
					display flex
					justify-content center
					align-items center
					position absolute
					font-size 13px
					line-height 1.2
					text-align center
					top -10px
					right -10px
					transform none
					width 50px
					height 50px
					background rgba(0,0,0,.3)
					color #fff
					border-radius 100%
					+widerThan($mobileLG)
						font-size 24px
						width 90px
						height 90px
				&:hover
					&::before
						background rgba(0,0,0,.5)
