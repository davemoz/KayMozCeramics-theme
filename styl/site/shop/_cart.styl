/* Cart/Checkout Inputs */
.woocommerce
	.woocommerce-form__label-for-checkbox
		display flex
		align-items center

/*--------------------------------------------------------------
 ## Cart Page
----------------------------------------------------------------*/
.woocommerce-cart
	.content-area
		text-align center
		.cart-empty
			margin 3em 0
	.woocommerce-cart-form
		margin-top 2em
		thead
			background #f5f5f5
			display none
			+widerThan($mobileLG)
				display table-header-group
				th
					padding 1em 0
		tbody
			.cart_item
				margin-bottom 
				&:nth-child(2n)
					td
						background-color #f5f5f5
				td
					display block
					text-align right
					clear both
					padding .875em .875em 0
					+widerThan($mobileLG)
						display table-cell
						text-align center
						padding 0
					&[data-title]
						&::before
							display block
							content attr(data-title)
							float left
							font-weight 700
							+widerThan($mobileLG)
								display none
				.product-remove
					position relative
					border-top 30px solid #fff
					+widerThan($mobileLG)
						border-top 0
					& > .remove
						box-shadow none
						border-bottom none
						position absolute
						top 0
						right 0
						width 48px
						font-size 48px
						line-height 1
						text-align center
						opacity 1
						&:hover
							opacity .6
						+widerThan($mobileLG)
							position relative
				.product-thumbnail
					text-align center
					a
						border-bottom 0
						background-color transparent
						box-shadow none
						text-align center
					img
						display block
						max-width 120px
						margin 0 auto
				.product-quantity
					.quantity
						input[type="number"]
							width 60px
							text-align center
							font-weight 700
			.actions
				padding-top 2em
				.coupon
					float right
					display flex
					flex-direction column
					margin-bottom 2em
					flex-basis 60%
					+widerThan($mobileLG)
						flex-direction row
						margin-bottom 0
					label
						display none
					#coupon_code
						width 100%
						margin-right 0
						margin-bottom .5em
						+widerThan($mobileLG)
							width unset
							margin-right 10px
							margin-bottom 0
					button[type="submit"][value="Apply coupon"]
						background $color__accent-hover
				button[type="submit"][value="Update cart"]
					float left
					flex-basis 100%
					background $color__accent-hover
					+widerThan($mobileLG)
						flex-basis 30%
	.cart-collaterals
		display grid
		grid-template-columns 1fr
		grid-gap 40px
		margin-top 2em
		+widerThan($tabletSM)
			grid-template-columns 1fr 1fr
			margin-top 4em
		.cart_totals
			width 100%
			grid-column 1 / -1
			+widerThan($tabletSM)
				grid-column 2 / -1
			h2
				text-align left
				padding 0 1rem
			.shop_table
				text-align left
				th,
				td
					padding 1rem
				td
					text-align right
				.woocommerce-shipping-methods
					list-style none
					list-style-type none
					margin 0
					padding 0
					width max-content
					clear both
					float right
					& > li
						display flex
						justify-content flex-start
						align-items center
						margin-bottom 10px
						width max-content
						& > label
							text-align left
						& > input[type=radio]:checked + label,
						& > input[type=radio]:checked[value^="free_shipping"] + label
							font-weight 700
				.woocommerce-shipping-destination
					font-size 13px
					clear both
					strong
						color $color__accent-dark
				.woocommerce-shipping-calculator
					text-align right
			.wc-proceed-to-checkout
				display flex
				flex-direction column
				margin-top 2em
				.checkout-button
					width 100%
					color #fff
					background $color__accent-dark
					font-weight 400
					font-size 18px
					padding 1.5em 0
					&:hover
						background $color__accent-darker
						color #fff
						font-weight 400